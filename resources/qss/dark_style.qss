/* 全局深色主题 */
QWidget {
    background-color: #1E1E1E;
    color: #D4D4D4;
    font-family: "Segoe UI", "Microsoft YaHei";
    outline: none; /* 移除点击时的虚线焦点框 */
}

/* 现代滚动条样式 */
QScrollBar:vertical {
    border: none;
    background: transparent;
    width: 8px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: #444;
    min-height: 30px;
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
    background: #555;
}

QScrollBar::handle:vertical:pressed {
    background: #4FACFE;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    border: none;
    background: transparent;
    height: 8px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background: #444;
    min-width: 30px;
    border-radius: 4px;
}

QScrollBar::handle:horizontal:hover {
    background: #555;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

QPushButton {
    background-color: #0E639C;
    color: white;
    border: none;
    padding: 6px 20px;
    border-radius: 2px;
}

QPushButton:hover {
    background-color: #1177BB;
}

QPushButton:pressed {
    background-color: #0D598C;
}

QSplitter::handle {
    background-color: #252526;
}

QListView {
    outline: none;
}

QListView::item {
    padding: 10px;
    border-bottom: 1px solid #2D2D2D;
}

QListView::item:selected {
    background-color: #37373D;
}

QTabWidget::pane {
    border: none;
    background: #1E1E1E;
}

QTabBar::tab {
    background: #2D2D2D;
    padding: 8px 20px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background: #1E1E1E;
    border-top: 2px solid #007ACC;
}

QLineEdit {
    background-color: #2D2D2D;
    border: 1px solid #3E3E42;
    padding: 5px;
    color: white;
    border-radius: 4px;
}

QLineEdit:focus {
    border: 1px solid #4FACFE;
}

QComboBox {
    background-color: #2D2D2D;
    border: 1px solid #3E3E42;
    border-radius: 4px;
    padding: 5px;
    color: white;
}

QComboBox:on {
    border: 1px solid #4FACFE;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QMenu {
    background-color: #2b2b2b;
    color: #f0f0f0;
    border: 1px solid #444;
    border-radius: 5px;
    padding: 5px;
}

/* 菜单项图标与文本间距规范：padding-left 设为 10px 配合 icon margin-left 6px 实现精确 10px 间距。请勿修改。 */
QMenu::item {
    padding: 6px 10px 6px 10px;
    border-radius: 3px;
}

QMenu::icon {
    margin-left: 6px;
}

QMenu::item:selected {
    background-color: #37373d;
}

QMenu::separator {
    height: 1px;
    background: #444;
    margin: 4px 10px;
}

QToolTip {
    background-color: #2D2D2D;
    color: #ffffff;
    border: 1px solid #555555;
    border-radius: 6px;
    padding: 5px;
}